{
  "name": "generator-litelement-cli",
  "version": "1.1.0",
  "description": "A simple LitElement CLI to generate a complete modern web component scaffolding. Includes Webpack, Babel, Karma, Documentation and IE11 support. Router is an option :)",
  "homepage": "https://github.com/marco238/litelement-cli",
  "author": {
    "name": "Marcos MonzÃ³n",
    "email": "marcomonzip@gmail.com",
    "url": "https://github.com/marco238"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "lit",
    "litelement",
    "web components",
    "wc",
    "cli",
    "scaffolding",
    "polymer",
    "webcomponents",
    "yeoman-generator"
  ],
  "devDependencies": {
    "yeoman-test": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "prettier": "^1.19.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-config-xo": "^0.27.2",
    "jest": "^24.8.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "yeoman-generator": "^2.0.1",
    "chalk": "^2.1.0",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest"
  },
  "repository": "marco238/litelement-cli",
  "license": "MIT"
}
